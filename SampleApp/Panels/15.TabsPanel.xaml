<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SampleApp.Panels.TabsPanel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:md="clr-namespace:Material.Components.Maui;assembly=Material.Components.Maui"
    BackgroundColor="{DynamicResource BackgroundColor}">

    <Grid RowDefinitions="*,*" RowSpacing="30">
        <md:Tabs Grid.Row="0">
            <md:TabItem Icon="Add" Text="item 1">
                <Grid>
                    <md:Label FontSize="32" Text="Item 1" />
                </Grid>
            </md:TabItem>
            <md:TabItem Icon="Add" Text="item 2">
                <Grid>
                    <md:Label FontSize="32" Text="Item 2" />
                </Grid>
            </md:TabItem>
            <md:TabItem Icon="Add" Text="item 3">
                <Grid>
                    <md:Label FontSize="32" Text="Item 3" />
                </Grid>
            </md:TabItem>
            <md:TabItem Icon="Add" Text="item 4">
                <Grid>
                    <md:Label FontSize="32" Text="Item 4" />
                </Grid>
            </md:TabItem>
        </md:Tabs>

        <md:Tabs Grid.Row="1" Style="{DynamicResource ScrollTabsStyle}">
            <md:TabItem Icon="Add" Text="item 1">
                <Grid>
                    <md:Label FontSize="32" Text="Item 1" />
                </Grid>
            </md:TabItem>
            <md:TabItem Icon="Add" Text="item 2">
                <Grid>
                    <md:Label FontSize="32" Text="Item 2" />
                </Grid>
            </md:TabItem>
            <md:TabItem Icon="Add" Text="item 3">
                <Grid>
                    <md:Label FontSize="32" Text="Item 3" />
                </Grid>
            </md:TabItem>
            <md:TabItem Icon="Add" Text="item 4">
                <Grid>
                    <md:Label FontSize="32" Text="Item 4" />
                </Grid>
            </md:TabItem>
            <md:TabItem Icon="Add" Text="item 5">
                <Grid>
                    <md:Label FontSize="32" Text="Item 5" />
                </Grid>
            </md:TabItem>
            <md:TabItem Icon="Add" Text="item 6">
                <Grid>
                    <md:Label FontSize="32" Text="Item 6" />
                </Grid>
            </md:TabItem>
            <md:TabItem Icon="Add" Text="item 7">
                <Grid>
                    <md:Label FontSize="32" Text="Item 7" />
                </Grid>
            </md:TabItem>
            <md:TabItem Icon="Add" Text="item 8">
                <Grid>
                    <md:Button Clicked="Button_Clicked" Text="111"/>
                </Grid>
            </md:TabItem>
        </md:Tabs>
    </Grid>
</ContentView>